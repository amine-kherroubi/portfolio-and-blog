---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const project = {
  title: "NEURAL NETWORKS",
  subtitle: "Deep Learning Architecture",
  year: "2024",
  client: "Personal Research",
  role: "ML Engineer, Researcher",
  technologies: ["Python", "TensorFlow", "PyTorch", "NumPy"],
  duration: "6 months",
  description:
    "Development of a novel neural network architecture for image classification tasks, achieving 95% accuracy while reducing computational complexity by 40%.",
  challenge:
    "Traditional deep learning models required significant computational resources, making them impractical for edge devices and real-time applications.",
  solution:
    "Designed a pruned network architecture that maintains high accuracy while dramatically reducing parameter count through intelligent layer design and weight optimization.",
  results: [
    "40% reduction in model size",
    "95% accuracy maintained",
    "3x faster inference time",
    "Successfully deployed on edge devices",
  ],
  github: "https://github.com/yourusername/neural-networks",
  demo: "https://demo.example.com",
};
---

<BaseLayout title={`${project.title} — Project`}>
  <nav class="bg-white border-b-2 border-black">
    <div
      class="max-w-[1600px] mx-auto px-16 lg:px-24 h-20 flex justify-between items-center"
    >
      <a
        href="/"
        class="text-[0.8125rem] font-bold tracking-[0.15em] uppercase hover:opacity-50 transition-opacity duration-200"
      >
        ← Home
      </a>
      <a
        href="/portfolio"
        class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
      >
        All Projects
      </a>
    </div>
  </nav>
  <section class="py-24 px-16 lg:px-24">
    <div class="max-w-[1600px] mx-auto">
      <div
        class="mb-12 flex items-center gap-8 text-[0.8125rem] font-bold uppercase tracking-[0.15em] text-black/50"
      >
        <span>{project.year}</span>
        <span>·</span>
        <span>{project.client}</span>
        <span>·</span>
        <span>{project.duration}</span>
      </div>
      <div class="w-16 h-0.5 bg-black mb-12"></div>
      <h1
        class="text-[clamp(3rem,10vw,8rem)] font-bold leading-[0.9] tracking-[-0.03em] mb-10"
      >
        {project.title}
      </h1>
      <p
        class="text-[2rem] lg:text-[2.5rem] text-black/70 leading-[1.3] font-light tracking-[-0.02em] max-w-[1200px]"
      >
        {project.subtitle}
      </p>
    </div>
  </section>
  <section class="px-16 lg:px-24 mb-32">
    <div class="max-w-[1600px] mx-auto">
      <div
        class="aspect-video bg-gray-100 border-2 border-black flex items-center justify-center"
      >
        <p class="text-black/30 text-xl font-bold uppercase tracking-[0.15em]">
          Project Visualization
        </p>
      </div>
    </div>
  </section>
  <section class="px-16 lg:px-24 mb-32">
    <div class="max-w-[1600px] mx-auto grid grid-cols-12 gap-x-8 gap-y-24">
      <div class="col-span-12 lg:col-span-8">
        <div class="space-y-24">
          <div>
            <div class="w-16 h-0.5 bg-black mb-10"></div>
            <h2
              class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em] uppercase mb-8"
            >
              Overview
            </h2>
            <p class="text-[1.375rem] text-black/80 leading-[1.6] font-light">
              {project.description}
            </p>
          </div>
          <div>
            <div class="w-16 h-0.5 bg-black mb-10"></div>
            <h2
              class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em] uppercase mb-8"
            >
              The Challenge
            </h2>
            <p class="text-[1.375rem] text-black/80 leading-[1.6] font-light">
              {project.challenge}
            </p>
          </div>
          <div>
            <div class="w-16 h-0.5 bg-black mb-10"></div>
            <h2
              class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em] uppercase mb-8"
            >
              The Solution
            </h2>
            <p
              class="text-[1.375rem] text-black/80 leading-[1.6] font-light mb-12"
            >
              {project.solution}
            </p>
            <div
              class="bg-black text-white p-8 border-2 border-black overflow-x-auto"
            >
              <pre
                class="text-sm font-mono leading-relaxed"><code>{`class OptimizedNetwork(nn.Module):
    def __init__(self, input_size, hidden_size, output_size):
        super().__init__()
        self.layers = nn.Sequential(
            nn.Linear(input_size, hidden_size),
            nn.ReLU(),
            nn.Dropout(0.2),
            nn.Linear(hidden_size, output_size)
        )
    
    def forward(self, x):
        return self.layers(x)`}</code></pre>
            </div>
          </div>
          <div>
            <div class="w-16 h-0.5 bg-black mb-10"></div>
            <h2
              class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em] uppercase mb-10"
            >
              Results
            </h2>
            <ul class="space-y-6">
              {
                project.results.map((result) => (
                  <li class="flex items-start gap-6">
                    <div class="w-2 h-2 bg-black mt-3 shrink-0" />
                    <p class="text-[1.375rem] text-black/80 leading-[1.6] font-light">
                      {result}
                    </p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
      <div class="col-span-12 lg:col-span-4">
        <div class="space-y-16 border-l-2 border-black pl-8">
          <div>
            <h3
              class="text-[0.8125rem] font-bold leading-tight mb-10 uppercase tracking-[0.15em]"
            >
              Project Info
            </h3>
            <dl class="space-y-8">
              <div>
                <dt
                  class="text-[0.6875rem] font-bold uppercase tracking-[0.15em] text-black/50 mb-3"
                >
                  Role
                </dt>
                <dd class="text-[0.9375rem] font-medium leading-normal">
                  {project.role}
                </dd>
              </div>
              <div>
                <dt
                  class="text-[0.6875rem] font-bold uppercase tracking-[0.15em] text-black/50 mb-3"
                >
                  Duration
                </dt>
                <dd class="text-[0.9375rem] font-medium leading-normal">
                  {project.duration}
                </dd>
              </div>
              <div>
                <dt
                  class="text-[0.6875rem] font-bold uppercase tracking-[0.15em] text-black/50 mb-3"
                >
                  Year
                </dt>
                <dd class="text-[0.9375rem] font-medium leading-normal">
                  {project.year}
                </dd>
              </div>
            </dl>
          </div>
          <div>
            <h3
              class="text-[0.8125rem] font-bold leading-tight mb-10 uppercase tracking-[0.15em]"
            >
              Technologies
            </h3>
            <div class="flex flex-wrap gap-3">
              {
                project.technologies.map((tech) => (
                  <span class="px-4 py-2 bg-black text-white text-[0.6875rem] font-bold uppercase tracking-[0.15em]">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>
          <div class="space-y-4">
            {
              project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  class="group flex items-center justify-between w-full px-6 py-4 bg-black text-white hover:bg-white hover:text-black border-2 border-black transition-colors duration-200"
                >
                  <span class="font-bold uppercase text-[0.8125rem] tracking-[0.15em]">
                    GitHub
                  </span>
                  <svg
                    class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </a>
              )
            }
            {
              project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  class="group flex items-center justify-between w-full px-6 py-4 border-2 border-black hover:bg-black hover:text-white transition-colors duration-200"
                >
                  <span class="font-bold uppercase text-[0.8125rem] tracking-[0.15em]">
                    Live Demo
                  </span>
                  <svg
                    class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer
    class="py-8 px-16 lg:px-24 bg-black text-white border-t-2 border-white"
  >
    <div
      class="max-w-[1600px] mx-auto flex justify-between items-center text-[0.6875rem] uppercase tracking-[0.15em] font-bold opacity-60"
    >
      <p>© 2024 Your Name</p>
      <p>Built with Astro</p>
    </div>
  </footer>
</BaseLayout>
