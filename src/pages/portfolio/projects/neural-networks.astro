---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const project = {
  title: "NEURAL NETWORKS",
  subtitle: "Deep Learning Architecture",
  year: "2024",
  client: "Personal Research",
  role: "ML Engineer, Researcher",
  technologies: ["Python", "TensorFlow", "PyTorch", "NumPy"],
  duration: "6 months",
  description:
    "Development of a novel neural network architecture for image classification tasks, achieving 95% accuracy while reducing computational complexity by 40%.",
  challenge:
    "Traditional deep learning models required significant computational resources, making them impractical for edge devices and real-time applications.",
  solution:
    "Designed a pruned network architecture that maintains high accuracy while dramatically reducing parameter count through intelligent layer design and weight optimization.",
  results: [
    "40% reduction in model size",
    "95% accuracy maintained",
    "3x faster inference time",
    "Successfully deployed on edge devices",
  ],
  github: "https://github.com/yourusername/neural-networks",
  demo: "https://demo.example.com",
};
---

<BaseLayout title={`${project.title} — Project`}>
  <nav class="bg-white border-b-2 border-black">
    <div
      class="max-w-screen-2xl mx-auto px-32 h-24 flex justify-between items-center"
    >
      <a
        href="/"
        class="text-sm font-bold tracking-widest uppercase hover:opacity-50 transition-opacity"
      >
        Home
      </a>
      <a
        href="/portfolio"
        class="text-sm font-bold uppercase tracking-widest hover:opacity-50 transition-opacity"
      >
        All Projects
      </a>
    </div>
  </nav>

  <section class="py-32 px-32">
    <div class="max-w-screen-2xl mx-auto">
      <div
        class="mb-16 flex items-center gap-8 text-sm font-bold uppercase tracking-widest text-black/50"
      >
        <span>{project.year}</span>
        <span>·</span>
        <span>{project.client}</span>
        <span>·</span>
        <span>{project.duration}</span>
      </div>
      <div class="w-16 h-0.5 bg-black mb-16"></div>
      <h1 class="text-9xl font-bold leading-tight tracking-tighter mb-12">
        {project.title}
      </h1>
      <p
        class="text-4xl text-black/70 leading-normal font-light tracking-tight max-w-5xl"
      >
        {project.subtitle}
      </p>
    </div>
  </section>

  <section class="px-32 mb-48">
    <div class="max-w-screen-2xl mx-auto">
      <div
        class="aspect-video bg-gray-100 border-2 border-black flex items-center justify-center"
      >
        <p class="text-black/30 text-xl font-bold uppercase tracking-widest">
          Project Visualization
        </p>
      </div>
    </div>
  </section>

  <section class="px-32 mb-48">
    <div class="max-w-screen-2xl mx-auto grid grid-cols-12 gap-16">
      <div class="col-span-8">
        <div class="space-y-32">
          <div>
            <div class="w-16 h-0.5 bg-black mb-12"></div>
            <h2
              class="text-4xl font-bold leading-tight tracking-tight uppercase mb-10"
            >
              Overview
            </h2>
            <p class="text-2xl text-black/80 leading-relaxed font-light">
              {project.description}
            </p>
          </div>

          <div>
            <div class="w-16 h-0.5 bg-black mb-12"></div>
            <h2
              class="text-4xl font-bold leading-tight tracking-tight uppercase mb-10"
            >
              The Challenge
            </h2>
            <p class="text-2xl text-black/80 leading-relaxed font-light">
              {project.challenge}
            </p>
          </div>

          <div>
            <div class="w-16 h-0.5 bg-black mb-12"></div>
            <h2
              class="text-4xl font-bold leading-tight tracking-tight uppercase mb-10"
            >
              The Solution
            </h2>
            <p class="text-2xl text-black/80 leading-relaxed font-light mb-16">
              {project.solution}
            </p>
            <div
              class="bg-black text-white p-12 border-2 border-black overflow-x-auto"
            >
              <pre
                class="text-sm font-mono leading-relaxed"><code>{`class OptimizedNetwork(nn.Module):
    def __init__(self, input_size, hidden_size, output_size):
        super().__init__()
        self.layers = nn.Sequential(
            nn.Linear(input_size, hidden_size),
            nn.ReLU(),
            nn.Dropout(0.2),
            nn.Linear(hidden_size, output_size)
        )
    
    def forward(self, x):
        return self.layers(x)`}</code></pre>
            </div>
          </div>

          <div>
            <div class="w-16 h-0.5 bg-black mb-12"></div>
            <h2
              class="text-4xl font-bold leading-tight tracking-tight uppercase mb-12"
            >
              Results
            </h2>
            <ul class="space-y-8">
              {
                project.results.map((result) => (
                  <li class="flex items-start gap-8">
                    <div class="w-2 h-2 bg-black mt-3 shrink-0" />
                    <p class="text-2xl text-black/80 leading-relaxed font-light">
                      {result}
                    </p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>

      <div class="col-span-4">
        <div class="space-y-20 border-l-2 border-black pl-12">
          <div>
            <h3
              class="text-sm font-bold leading-tight mb-12 uppercase tracking-widest"
            >
              Project Info
            </h3>
            <dl class="space-y-10">
              <div>
                <dt
                  class="text-xs font-bold uppercase tracking-widest text-black/50 mb-4"
                >
                  Role
                </dt>
                <dd class="text-base font-medium leading-normal">
                  {project.role}
                </dd>
              </div>
              <div>
                <dt
                  class="text-xs font-bold uppercase tracking-widest text-black/50 mb-4"
                >
                  Duration
                </dt>
                <dd class="text-base font-medium leading-normal">
                  {project.duration}
                </dd>
              </div>
              <div>
                <dt
                  class="text-xs font-bold uppercase tracking-widest text-black/50 mb-4"
                >
                  Year
                </dt>
                <dd class="text-base font-medium leading-normal">
                  {project.year}
                </dd>
              </div>
            </dl>
          </div>

          <div>
            <h3
              class="text-sm font-bold leading-tight mb-12 uppercase tracking-widest"
            >
              Technologies
            </h3>
            <div class="flex flex-wrap gap-3">
              {
                project.technologies.map((tech) => (
                  <span class="px-4 py-2 bg-black text-white text-xs font-bold uppercase tracking-widest">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>

          <div class="space-y-6">
            {
              project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  class="group flex items-center justify-between w-full px-8 py-5 bg-black text-white hover:bg-white hover:text-black border-2 border-black transition-colors"
                >
                  <span class="font-bold uppercase text-sm tracking-widest">
                    GitHub
                  </span>
                </a>
              )
            }
            {
              project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  class="group flex items-center justify-between w-full px-8 py-5 border-2 border-black hover:bg-black hover:text-white transition-colors"
                >
                  <span class="font-bold uppercase text-sm tracking-widest">
                    Live Demo
                  </span>
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="py-16 px-32 bg-white border-t-2 border-black">
    <div
      class="max-w-screen-2xl mx-auto flex justify-between items-center text-xs uppercase tracking-widest font-bold opacity-60"
    >
      <p>© 2024 Your Name</p>
      <p>Built with Astro</p>
    </div>
  </footer>
</BaseLayout>
