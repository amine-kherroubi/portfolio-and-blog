---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const project = {
  title: "NEURAL NETWORKS",
  subtitle: "Deep Learning Architecture",
  year: "2024",
  client: "Personal Research",
  role: "ML Engineer, Researcher",
  technologies: ["Python", "TensorFlow", "PyTorch", "NumPy"],
  duration: "6 months",
  description:
    "Development of a novel neural network architecture for image classification tasks, achieving 95% accuracy while reducing computational complexity by 40%.",
  challenge:
    "Traditional deep learning models required significant computational resources, making them impractical for edge devices and real-time applications.",
  solution:
    "Designed a pruned network architecture that maintains high accuracy while dramatically reducing parameter count through intelligent layer design and weight optimization.",
  results: [
    "40% reduction in model size",
    "95% accuracy maintained",
    "3x faster inference time",
    "Successfully deployed on edge devices",
  ],
  github: "https://github.com/yourusername/neural-networks",
  demo: "https://demo.example.com",
};

const relatedProjects = [
  {
    title: "QUANTUM COMPUTING",
    subtitle: "Algorithm Optimization",
    slug: "quantum",
  },
  {
    title: "SWISS GRID SYSTEM",
    subtitle: "Interactive Design Tool",
    slug: "grid-system",
  },
];
---

<BaseLayout title={`${project.title} — Project`}>
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b-4 border-black">
    <div
      class="max-w-[1600px] mx-auto px-16 lg:px-24 py-8 flex justify-between items-center"
    >
      <a href="/" class="text-lg font-bold tracking-tight uppercase">
        ← HOME
      </a>
      <a href="/#work" class="text-sm font-bold uppercase tracking-wide">
        ALL PROJECTS
      </a>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="pt-40 pb-32 px-16 lg:px-24">
    <div class="max-w-[1600px] mx-auto">
      <div
        class="mb-12 flex items-center gap-6 text-sm font-bold uppercase tracking-wide"
      >
        <span>{project.year}</span>
        <span class="w-2 h-2 bg-black"></span>
        <span>{project.client}</span>
        <span class="w-2 h-2 bg-black"></span>
        <span>{project.duration}</span>
      </div>

      <div class="w-32 h-2 bg-yellow mb-12"></div>
      <h1
        class="text-[clamp(3rem,8vw,8rem)] font-bold leading-[0.85] tracking-tighter mb-12"
      >
        {project.title}
      </h1>
      <p
        class="text-3xl lg:text-4xl text-black/70 mb-16 max-w-[1200px] leading-[1.3]"
      >
        {project.subtitle}
      </p>
    </div>
  </section>

  <!-- Project Image -->
  <section class="px-16 lg:px-24 mb-32">
    <div class="max-w-[1600px] mx-auto">
      <div
        class="aspect-video bg-black border-8 border-yellow flex items-center justify-center"
      >
        <p class="text-white/70 text-2xl font-bold uppercase tracking-wide">
          PROJECT VISUALIZATION
        </p>
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="px-16 lg:px-24 mb-32">
    <div class="max-w-[1600px] mx-auto grid grid-cols-1 lg:grid-cols-12 gap-24">
      <!-- Main Content -->
      <div class="lg:col-span-8">
        <div class="space-y-24">
          <!-- Overview -->
          <div>
            <div class="w-24 h-2 bg-yellow mb-8"></div>
            <h2 class="text-4xl font-bold mb-8 tracking-tight uppercase">
              Overview
            </h2>
            <p class="text-2xl text-black/70 leading-[1.6]">
              {project.description}
            </p>
          </div>

          <!-- Challenge -->
          <div>
            <div class="w-24 h-2 bg-black mb-8"></div>
            <h2 class="text-4xl font-bold mb-8 tracking-tight uppercase">
              The Challenge
            </h2>
            <p class="text-2xl text-black/70 leading-[1.6]">
              {project.challenge}
            </p>
          </div>

          <!-- Solution -->
          <div>
            <div class="w-24 h-2 bg-yellow mb-8"></div>
            <h2 class="text-4xl font-bold mb-8 tracking-tight uppercase">
              The Solution
            </h2>
            <p class="text-2xl text-black/70 leading-[1.6] mb-12">
              {project.solution}
            </p>

            <!-- Code Example -->
            <div
              class="bg-black text-white p-12 border-8 border-yellow overflow-x-auto"
            >
              <pre
                class="text-base font-mono"><code>{`class OptimizedNetwork(nn.Module):
    def __init__(self, input_size, hidden_size, output_size):
        super().__init__()
        self.layers = nn.Sequential(
            nn.Linear(input_size, hidden_size),
            nn.ReLU(),
            nn.Dropout(0.2),
            nn.Linear(hidden_size, output_size)
        )
    
    def forward(self, x):
        return self.layers(x)`}</code></pre>
            </div>
          </div>

          <!-- Results -->
          <div>
            <div class="w-24 h-2 bg-black mb-8"></div>
            <h2 class="text-4xl font-bold mb-8 tracking-tight uppercase">
              Results
            </h2>
            <ul class="space-y-6">
              {
                project.results.map((result) => (
                  <li class="flex items-start gap-6">
                    <div class="w-4 h-4 bg-yellow mt-2 shrink-0" />
                    <p class="text-2xl text-black/70">{result}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-4">
        <div
          class="lg:sticky lg:top-40 space-y-16 border-l-4 border-black pl-12"
        >
          <!-- Project Info -->
          <div>
            <h3 class="text-xl font-bold mb-8 uppercase tracking-wide">
              PROJECT INFO
            </h3>
            <dl class="space-y-6">
              <div>
                <dt
                  class="text-sm font-bold uppercase tracking-wide text-black/60 mb-2"
                >
                  Role
                </dt>
                <dd class="text-lg font-bold">{project.role}</dd>
              </div>
              <div>
                <dt
                  class="text-sm font-bold uppercase tracking-wide text-black/60 mb-2"
                >
                  Duration
                </dt>
                <dd class="text-lg font-bold">{project.duration}</dd>
              </div>
              <div>
                <dt
                  class="text-sm font-bold uppercase tracking-wide text-black/60 mb-2"
                >
                  Year
                </dt>
                <dd class="text-lg font-bold">{project.year}</dd>
              </div>
            </dl>
          </div>

          <!-- Technologies -->
          <div>
            <h3 class="text-xl font-bold mb-8 uppercase tracking-wide">
              TECHNOLOGIES
            </h3>
            <div class="flex flex-wrap gap-3">
              {
                project.technologies.map((tech) => (
                  <span class="px-4 py-2 bg-black text-white text-sm font-bold uppercase tracking-wide">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>

          <!-- Links -->
          <div class="space-y-6">
            {
              project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  class="flex items-center justify-between w-full px-8 py-6 bg-black text-white hover:bg-yellow hover:text-black transition-colors group"
                >
                  <span class="font-bold uppercase text-sm tracking-wide">
                    GitHub
                  </span>
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </a>
              )
            }
            {
              project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  class="flex items-center justify-between w-full px-8 py-6 border-4 border-black hover:bg-black hover:text-white transition-colors group"
                >
                  <span class="font-bold uppercase text-sm tracking-wide">
                    Live Demo
                  </span>
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="3"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Projects -->
  <section class="py-32 px-16 lg:px-24 bg-gray-50">
    <div class="max-w-[1600px] mx-auto">
      <div class="w-32 h-2 bg-yellow mb-12"></div>
      <h2 class="text-4xl font-bold mb-16 uppercase tracking-tight">
        MORE PROJECTS
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {
          relatedProjects.map((related) => (
            <a
              href={`/projects/${related.slug}`}
              class="group bg-white p-12 border-4 border-black hover:border-yellow transition-colors"
            >
              <h3 class="text-3xl lg:text-4xl font-bold mb-4 leading-[1.1]">
                {related.title}
              </h3>
              <p class="text-xl text-black/60 mb-8 font-medium">
                {related.subtitle}
              </p>
              <span class="inline-flex items-center gap-3 font-bold uppercase text-sm tracking-wide">
                View Project
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                >
                  <path
                    stroke-linecap="square"
                    stroke-linejoin="miter"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer
    class="py-12 px-16 lg:px-24 bg-black text-white border-t-2 border-white/20"
  >
    <div
      class="max-w-[1600px] mx-auto flex flex-col md:flex-row justify-between items-center gap-8"
    >
      <p class="text-sm font-bold uppercase tracking-wide">© 2024 Your Name</p>
      <p class="text-sm font-bold uppercase tracking-wide">
        Designed with <span class="text-yellow">precision</span> using Astro
      </p>
    </div>
  </footer>
</BaseLayout>
