---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";

const projects = [
  {
    title: "Neural Networks",
    description: "Deep learning architecture optimization",
    year: "2024",
    tags: ["AI", "Python"],
    link: "/portfolio/neural-networks",
  },
  {
    title: "Swiss Grid System",
    description: "Interactive design tool for web layouts",
    year: "2024",
    tags: ["Design", "TypeScript"],
    link: "/portfolio/grid-system",
  },
  {
    title: "Quantum Computing",
    description: "Algorithm research and optimization",
    year: "2023",
    tags: ["Research", "Qiskit"],
    link: "/portfolio/quantum",
  },
  {
    title: "Typographic Explorer",
    description: "Generative art with computational design",
    year: "2024",
    tags: ["Creative", "Canvas API"],
    link: "/portfolio/typography",
  },
];
---

<BaseLayout title="Portfolio">
  <Navigation currentPage="portfolio" />

  <!-- Hero with more breathing room -->
  <section class="py-32 lg:py-40 px-8 md:px-16 lg:px-20 xl:px-32">
    <div class="max-w-[1400px] mx-auto">
      <div class="w-20 h-0.5 bg-black mb-20"></div>
      <h1
        class="text-[clamp(4rem,12vw,10rem)] font-bold leading-[0.9] tracking-[-0.03em] mb-16 lg:mb-20"
      >
        Portfolio
      </h1>
      <p class="text-[1.5rem] lg:text-[1.75rem] leading-[1.5] font-light tracking-[-0.01em] max-w-3xl text-black/80">
        Selected projects demonstrating technical expertise and design thinking
      </p>
    </div>
  </section>

  <!-- Projects Grid with generous spacing -->
  <section class="py-20 lg:py-24 px-8 md:px-16 lg:px-20 xl:px-32 border-t-2 border-black">
    <div class="max-w-[1400px] mx-auto">
      <div class="space-y-0">
        {
          projects.map((project, index) => (
            <article class:list={["border-b-2 border-black", index === projects.length - 1 && "border-b-0"]}>
              <a
                href={project.link}
                class="group block py-16 lg:py-20 transition-colors duration-200 hover:bg-black hover:text-white"
              >
                <div class="grid grid-cols-12 gap-x-6 md:gap-x-12 lg:gap-x-16 items-center">
                  <!-- Year -->
                  <div class="col-span-12 lg:col-span-2">
                    <span class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] opacity-60 group-hover:opacity-100">
                      {project.year}
                    </span>
                  </div>

                  <!-- Title & Description -->
                  <div class="col-span-12 lg:col-span-6 mt-6 lg:mt-0">
                    <h2 class="text-[2.25rem] lg:text-[2.75rem] font-bold leading-[1.1] tracking-[-0.02em] mb-5">
                      {project.title}
                    </h2>
                    <p class="text-[1.125rem] lg:text-[1.25rem] leading-[1.6] opacity-70 group-hover:opacity-100">
                      {project.description}
                    </p>
                  </div>

                  <!-- Tags -->
                  <div class="col-span-12 lg:col-span-4 flex items-center justify-start lg:justify-end gap-4 mt-8 lg:mt-0">
                    {project.tags.map((tag) => (
                      <span class="px-4 py-2.5 text-[0.6875rem] font-bold uppercase tracking-[0.15em] border border-current">
                        {tag}
                      </span>
                    ))}
                    <svg
                      class="w-6 h-6 ml-2 opacity-60 group-hover:opacity-100 group-hover:translate-x-1 transition-all duration-200"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                    >
                      <path
                        stroke-linecap="square"
                        stroke-linejoin="miter"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Capabilities with better spacing -->
  <section class="py-40 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32 border-t-2 border-black">
    <div class="max-w-[1400px] mx-auto">
      <div class="grid grid-cols-12 gap-x-6 md:gap-x-12 lg:gap-x-16 gap-y-20">
        <!-- Label -->
        <div class="col-span-12 lg:col-span-3">
          <div class="w-20 h-0.5 bg-black mb-10"></div>
          <h2 class="text-[2rem] lg:text-[2.25rem] font-bold leading-[1.1] tracking-[-0.02em]">
            Capabilities
          </h2>
        </div>

        <!-- Capabilities Grid -->
        <div class="col-span-12 lg:col-span-9">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-x-12 lg:gap-x-16 gap-y-20">
            <!-- Design -->
            <div class="border-l-2 border-black pl-8">
              <h3 class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] mb-8">
                Design
              </h3>
              <ul class="space-y-4 text-[0.9375rem] leading-[1.7] text-black/70">
                <li>Interface Design</li>
                <li>Design Systems</li>
                <li>Typography</li>
                <li>Visual Identity</li>
              </ul>
            </div>

            <!-- Development -->
            <div class="border-l-2 border-black pl-8">
              <h3 class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] mb-8">
                Development
              </h3>
              <ul class="space-y-4 text-[0.9375rem] leading-[1.7] text-black/70">
                <li>Frontend Engineering</li>
                <li>Python / TypeScript</li>
                <li>Machine Learning</li>
                <li>Algorithm Design</li>
              </ul>
            </div>

            <!-- Strategy -->
            <div class="border-l-2 border-black pl-8">
              <h3 class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] mb-8">
                Strategy
              </h3>
              <ul class="space-y-4 text-[0.9375rem] leading-[1.7] text-black/70">
                <li>Technical Architecture</li>
                <li>Problem Solving</li>
                <li>Research & Analysis</li>
                <li>Process Optimization</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer variant="light" />
</BaseLayout>