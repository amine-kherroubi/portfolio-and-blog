---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config/site";

const experience = [
  {
    period: "2024 — Now",
    title: "Independent Designer & Developer",
    company: "Self-initiated projects and collaborations",
  },
  {
    period: "2023",
    title: "Full Stack Developer",
    company: "Tech Company",
  },
  {
    period: "2022",
    title: "Frontend Developer",
    company: "Design Studio",
  },
];

const principles = [
  {
    title: "Less, but better",
    description:
      "Clarity, hierarchy, and restraint. Every element has a job, or it leaves.",
  },
  {
    title: "Utility first",
    description:
      "Design and code serve the same purpose: make the path obvious and unobtrusive.",
  },
  {
    title: "Calm interactions",
    description:
      "Static by default. Subtle hover cues only where they help the reader orient.",
  },
  {
    title: "Systems thinking",
    description:
      "Consistent grids, measured typography, accessible color, and durable patterns.",
  },
];
---

<BaseLayout
  title="About — Mohamed El Amine Kherroubi"
  description="Designer and developer focused on creating thoughtful digital experiences"
>
  <Navigation currentPage="about" />

  <main class="px-6 md:px-10 lg:px-16 py-16 md:py-24 space-y-24">
    <section class="max-w-5xl mx-auto space-y-8">
      <p class="text-xs uppercase tracking-[0.25em] text-black/60">
        About
      </p>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
        Mohamed El Amine Kherroubi
      </h1>
      <div class="grid gap-12 lg:grid-cols-12 lg:gap-16">
        <div class="lg:col-span-8 space-y-6 text-lg leading-relaxed text-black/80">
          <p>
            I design and build calm, purposeful digital products. My work pairs
            clear visual systems with reliable engineering so people can read,
            act, and move on without friction.
          </p>
          <p>
            The output is quiet on purpose—focused typography, measured rhythm,
            and interfaces that stay out of the way. I value accessibility,
            meaningful defaults, and details you only notice when they are
            missing.
          </p>
        </div>
        <div class="lg:col-span-4 space-y-4 text-sm uppercase tracking-[0.15em]">
          <div class="border-t border-black pt-4">
            <div class="text-black/60">Role</div>
            <div class="text-base font-semibold normal-case tracking-normal">
              Designer & Developer
            </div>
          </div>
          <div class="border-t border-black pt-4">
            <div class="text-black/60">Based in</div>
            <div class="text-base font-semibold normal-case tracking-normal">
              Remote • CET
            </div>
          </div>
          <div class="border-t border-black pt-4">
            <div class="text-black/60">Availability</div>
            <div class="text-base font-semibold normal-case tracking-normal">
              Select collaborations, 2025
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="max-w-5xl mx-auto space-y-8 border-t border-black pt-12">
      <p class="text-xs uppercase tracking-[0.25em] text-black/60">Approach</p>
      <div class="grid gap-10 md:grid-cols-2">
        {principles.map((principle) => (
          <div class="space-y-2">
            <h3 class="text-xl font-semibold">{principle.title}</h3>
            <p class="text-base leading-relaxed text-black/70">
              {principle.description}
            </p>
          </div>
        ))}
      </div>
    </section>

    <section class="max-w-5xl mx-auto space-y-8 border-t border-black pt-12">
      <p class="text-xs uppercase tracking-[0.25em] text-black/60">Experience</p>
      <div class="space-y-6">
        {experience.map((item) => (
          <div class="flex flex-col md:flex-row md:items-baseline md:justify-between border-b border-black/10 pb-4">
            <div class="text-sm uppercase tracking-[0.15em] text-black/60">
              {item.period}
            </div>
            <div class="md:text-right">
              <div class="text-lg font-semibold">{item.title}</div>
              <div class="text-base text-black/70">{item.company}</div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="max-w-5xl mx-auto space-y-8 border-t border-black pt-12">
      <p class="text-xs uppercase tracking-[0.25em] text-black/60">
        Capabilities
      </p>
      <div class="grid gap-8 md:grid-cols-3">
        <div class="space-y-3">
          <h3 class="text-sm uppercase tracking-[0.2em] text-black/80">
            Design
          </h3>
          <ul class="space-y-2 text-base text-black/80">
            <li>Interface & interaction</li>
            <li>Design systems & grids</li>
            <li>Prototyping & usability</li>
          </ul>
        </div>
        <div class="space-y-3">
          <h3 class="text-sm uppercase tracking-[0.2em] text-black/80">
            Frontend
          </h3>
          <ul class="space-y-2 text-base text-black/80">
            <li>Astro, React, TypeScript</li>
            <li>Accessible, performant UI</li>
            <li>Content-first architectures</li>
          </ul>
        </div>
        <div class="space-y-3">
          <h3 class="text-sm uppercase tracking-[0.2em] text-black/80">
            Delivery
          </h3>
          <ul class="space-y-2 text-base text-black/80">
            <li>Documentation and systems</li>
            <li>CI/CD and observability</li>
            <li>Remote collaboration</li>
          </ul>
        </div>
      </div>
    </section>

    <section class="max-w-5xl mx-auto space-y-6 border-t border-black pt-12">
      <p class="text-xs uppercase tracking-[0.25em] text-black/60">Contact</p>
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <p class="text-lg text-black/80">
          Prefer projects that value clarity, performance, and thoughtful craft.
        </p>
        <a
          href={`mailto:${SITE.email}`}
          class="inline-flex items-center gap-2 border border-black px-5 py-3 text-sm font-semibold uppercase tracking-[0.2em] hover:bg-black hover:text-white transition-colors"
        >
          Email Me
        </a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
