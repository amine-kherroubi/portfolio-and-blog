---
/**
 * Home Page
 * 
 * Main landing page with hero section, philosophy, and contact information.
 */

import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE, SOCIAL } from "../config/site";

/**
 * Social media links configuration
 */
const socialLinks = [
  { href: SOCIAL.github, label: "GitHub", icon: "github" },
  { href: SOCIAL.linkedin, label: "LinkedIn", icon: "linkedin" },
].filter((link) => link.href);
---

<BaseLayout>
  <Navigation currentPage="home" />

  <!-- Hero Section -->
  <section
    class="min-h-[calc(100vh-6rem)] flex items-center px-8 md:px-16 lg:px-20 xl:px-32 py-24 md:py-32 lg:py-48"
  >
    <div class="max-w-screen-2xl w-full mx-auto">
      <h1
        class="text-[clamp(3rem,12vw,9rem)] font-bold leading-[0.95] tracking-[-0.02em] mb-24 md:mb-32 lg:mb-48"
      >
        Amine<br />Kherroubi
      </h1>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-y-6 md:gap-y-8 gap-x-6 md:gap-x-12 lg:gap-x-16">
        <div class="lg:col-span-6">
          <p
            class="text-xl md:text-2xl lg:text-3xl leading-relaxed font-light tracking-tight mb-4 md:mb-6"
          >
            Designer & Developer
          </p>
          <p
            class="text-xl md:text-2xl lg:text-3xl leading-relaxed font-light tracking-tight text-black/70"
          >
            Focused on clarity, function, and timeless solutions
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section
    class="py-24 md:py-32 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32 border-t-2 border-black"
  >
    <div class="max-w-screen-2xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-y-6 md:gap-y-8 gap-x-6 md:gap-x-12 lg:gap-x-16">
        <h2
          class="lg:col-span-3 text-3xl md:text-4xl font-bold leading-[1.1] tracking-[-0.02em]"
        >
          Philosophy
        </h2>

        <div class="lg:col-span-7 lg:col-start-6 space-y-6 md:space-y-8 lg:space-y-12">
          <p
            class="text-xl md:text-2xl lg:text-3xl leading-relaxed tracking-tight font-light"
          >
            Every design decision stems from function. Form follows purpose.
            Systems over decoration. Clarity over complexity.
          </p>
          <p
            class="text-xl md:text-2xl lg:text-3xl leading-relaxed tracking-tight font-light text-black/70"
          >
            Working at the intersection of design and technology, creating
            solutions that prioritize usability, accessibility, and longevity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section
    id="contact"
    class="py-24 md:py-32 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32 bg-white border-t-2 border-black"
  >
    <div class="max-w-screen-2xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-y-6 md:gap-y-8 gap-x-6 md:gap-x-12 lg:gap-x-16">
        <h2
          class="lg:col-span-3 text-3xl md:text-4xl font-bold leading-[1.1] tracking-[-0.02em]"
        >
          Contact
        </h2>

        <div class="lg:col-span-7 lg:col-start-6">
          <a
            href={`mailto:${SITE.email}`}
            class="inline-block text-xl md:text-2xl lg:text-3xl font-bold mb-12 md:mb-16 lg:mb-24 border-b-2 border-transparent hover:border-black transition-colors duration-200 focus-visible:border-black break-all"
          >
            {SITE.email}
          </a>

          {
            socialLinks.length > 0 && (
              <div class="flex flex-wrap gap-6 md:gap-8 lg:gap-12 pt-6 md:pt-8 lg:pt-12 border-t-2 border-black/20">
                {socialLinks.map(({ href, label }) => (
                  <a
                    href={href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-xs md:text-sm font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200 focus-visible:opacity-50"
                  >
                    {label}
                  </a>
                ))}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* Smooth scroll to contact section */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  /* Optional: Add subtle animation to hero on load */
  @media (prefers-reduced-motion: no-preference) {
    h1 {
      animation: fadeInUp 0.2s ease;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>
