---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE, SOCIAL } from "../config/site";

const socialLinks = [
  { href: SOCIAL.github, label: "GitHub" },
  { href: SOCIAL.linkedin, label: "LinkedIn" },
].filter((link) => link.href);
---

<BaseLayout>
  <Navigation currentPage="home" />

  <section class="min-h-screen flex items-center px-32 py-48">
    <div class="max-w-screen-2xl w-full mx-auto">
      <h1 class="text-9xl font-bold leading-tight tracking-tighter mb-48">
        Amine<br />Kherroubi
      </h1>

      <div class="grid grid-cols-12 gap-16">
        <div class="col-span-5">
          <p class="text-4xl leading-normal font-light tracking-tight mb-8">
            Designer & Developer
          </p>
          <p
            class="text-4xl leading-normal font-light tracking-tight text-black/60"
          >
            Focused on clarity, function, and timeless solutions
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-48 px-32 border-t-2 border-black">
    <div class="max-w-screen-2xl mx-auto">
      <div class="grid grid-cols-12 gap-16">
        <h2 class="col-span-3 text-4xl font-bold leading-tight tracking-tight">
          Philosophy
        </h2>

        <div class="col-span-7 col-start-6 space-y-12">
          <p class="text-3xl leading-relaxed tracking-tight font-light">
            Every design decision stems from function. Form follows purpose.
            Systems over decoration. Clarity over complexity.
          </p>
          <p
            class="text-3xl leading-relaxed tracking-tight font-light text-black/70"
          >
            Working at the intersection of design and technology, creating
            solutions that prioritize usability, accessibility, and longevity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="py-48 px-32 bg-white border-t-2 border-black">
    <div class="max-w-screen-2xl mx-auto">
      <div class="grid grid-cols-12 gap-16">
        <h2 class="col-span-3 text-4xl font-bold leading-tight tracking-tight">
          Contact
        </h2>

        <div class="col-span-7 col-start-6">
          <a
            href={`mailto:${SITE.email}`}
            class="inline-block text-4xl font-bold mb-24 border-b-2 border-transparent hover:border-black transition-colors"
          >
            {SITE.email}
          </a>

          {
            socialLinks.length > 0 && (
              <div class="flex gap-16 pt-12 border-t border-black/20">
                {socialLinks.map(({ href, label }) => (
                  <a
                    href={href}
                    target="_blank"
                    rel="noopener"
                    class="text-sm font-bold uppercase tracking-widest hover:opacity-50 transition-opacity"
                  >
                    {label}
                  </a>
                ))}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
