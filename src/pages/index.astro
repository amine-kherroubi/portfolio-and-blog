---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE, SOCIAL } from "../config/site";
---

<BaseLayout>
  <Navigation currentPage="home" />

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center px-8 lg:px-16 pt-32 pb-32">
    <div class="max-w-7xl w-full mx-auto">
      <div class="mb-8 h-px bg-black w-24"></div>

      <h1
        class="text-[clamp(3rem,12vw,10rem)] font-bold leading-[0.9] tracking-tight mb-16"
      >
        YOUR<br />NAME
      </h1>

      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-12 lg:col-span-6">
          <p class="text-2xl leading-relaxed text-black/80">
            Designer & Developer<br />
            Focused on clarity, function, and timeless solutions
          </p>
        </div>

        <div class="col-span-12 lg:col-span-6 flex items-end">
          <div class="space-y-4 w-full">
            <a
              href="/portfolio"
              class="block px-8 py-4 bg-black text-white text-center text-sm font-bold uppercase tracking-wider hover:bg-gray-800 transition-colors"
            >
              Portfolio
            </a>
            <a
              href="/blog"
              class="block px-8 py-4 border-2 border-black text-center text-sm font-bold uppercase tracking-wider hover:bg-black hover:text-white transition-colors"
            >
              Blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="py-32 px-8 lg:px-16 border-t-2 border-black">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-12 gap-8 lg:gap-16">
        <div class="col-span-12 lg:col-span-4">
          <div class="h-px bg-black w-16 mb-6"></div>
          <h2 class="text-4xl font-bold leading-tight mb-4">Philosophy</h2>
        </div>

        <div class="col-span-12 lg:col-span-8">
          <p class="text-xl leading-relaxed text-black/80 mb-6">
            Every design decision stems from function. Form follows purpose.
            Systems over decoration. Clarity over complexity.
          </p>
          <p class="text-xl leading-relaxed text-black/80">
            Working at the intersection of design and technology, creating
            solutions that prioritize usability, accessibility, and longevity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-32 px-8 lg:px-16 bg-black text-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-12 gap-8 lg:gap-16">
        <div class="col-span-12 lg:col-span-4">
          <div class="h-px bg-white w-16 mb-6"></div>
          <h2 class="text-4xl font-bold leading-tight">Contact</h2>
        </div>

        <div class="col-span-12 lg:col-span-8">
          <a
            href={`mailto:${SITE.email}`}
            class="block text-2xl font-bold mb-12 border-b-2 border-transparent hover:border-white transition-colors inline-block"
          >
            {SITE.email}
          </a>

          <div class="flex gap-8">
            {
              SOCIAL.github && (
                <a
                  href={SOCIAL.github}
                  target="_blank"
                  rel="noopener"
                  class="text-sm font-bold uppercase tracking-wider hover:opacity-60 transition-opacity"
                >
                  GitHub
                </a>
              )
            }
            {
              SOCIAL.linkedin && (
                <a
                  href={SOCIAL.linkedin}
                  target="_blank"
                  rel="noopener"
                  class="text-sm font-bold uppercase tracking-wider hover:opacity-60 transition-opacity"
                >
                  LinkedIn
                </a>
              )
            }
            {
              SOCIAL.twitter && (
                <a
                  href={SOCIAL.twitter}
                  target="_blank"
                  rel="noopener"
                  class="text-sm font-bold uppercase tracking-wider hover:opacity-60 transition-opacity"
                >
                  Twitter
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer variant="dark" />
</BaseLayout>
