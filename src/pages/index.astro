---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "NEURAL NETWORKS",
    subtitle: "Deep Learning Architecture",
    year: "2024",
    tags: ["AI", "Python", "TensorFlow"],
    link: "/projects/neural-networks"
  },
  {
    title: "SWISS GRID SYSTEM",
    subtitle: "Interactive Design Tool",
    year: "2024",
    tags: ["Design", "TypeScript", "WebGL"],
    link: "/projects/grid-system"
  },
  {
    title: "QUANTUM COMPUTING",
    subtitle: "Algorithm Optimization",
    year: "2023",
    tags: ["Research", "Qiskit", "Mathematics"],
    link: "/projects/quantum"
  },
  {
    title: "TYPOGRAPHIC EXPLORER",
    subtitle: "Generative Art Project",
    year: "2024",
    tags: ["Creative", "Canvas API", "Animation"],
    link: "/projects/typography"
  }
];

const blogPosts = [
  {
    title: "The Beauty of Constraint",
    excerpt: "How limitations in design lead to creative breakthroughs and elegant solutions.",
    date: "2024-03-15",
    readTime: "5 min read",
    slug: "beauty-of-constraint"
  },
  {
    title: "Swiss Design in Digital Age",
    excerpt: "Adapting timeless principles to modern web interfaces and user experiences.",
    date: "2024-03-01",
    readTime: "7 min read",
    slug: "swiss-design-digital"
  }
];
---

<Layout title="Portfolio — Designer & Developer">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-sm border-b border-black/10">
    <div class="max-w-[1400px] mx-auto px-6 lg:px-12 py-6 flex justify-between items-center">
      <a href="/" class="text-lg font-bold tracking-tight hover:text-red-600 transition-colors">
        PORTFOLIO
      </a>
      <ul class="flex gap-8 text-sm font-medium">
        <li><a href="#work" class="hover:text-red-600 transition-colors">WORK</a></li>
        <li><a href="#blog" class="hover:text-red-600 transition-colors">BLOG</a></li>
        <li><a href="#contact" class="hover:text-red-600 transition-colors">CONTACT</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center px-6 lg:px-12 pt-24">
    <div class="max-w-[1400px] w-full">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
        <!-- Text Content -->
        <div class="lg:col-span-7">
          <h1 class="text-[clamp(3rem,8vw,7rem)] font-bold leading-[0.9] tracking-tight mb-8">
            YOUR<br/>
            NAME<br/>
            <span class="text-red-600">HERE</span>
          </h1>
          <p class="text-xl lg:text-2xl text-black/70 max-w-[600px] mb-12 leading-relaxed">
            Computer scientist & designer crafting minimal, purposeful digital experiences 
            at the intersection of technology and art.
          </p>
          <div class="flex gap-6">
            <a href="#work" class="px-8 py-4 bg-black text-white font-medium hover:bg-red-600 transition-all duration-300 hover:scale-105">
              VIEW WORK
            </a>
            <a href="#contact" class="px-8 py-4 border-2 border-black font-medium hover:bg-black hover:text-white transition-all duration-300">
              GET IN TOUCH
            </a>
          </div>
        </div>

        <!-- Geometric Element -->
        <div class="lg:col-span-5 relative h-[400px] lg:h-[500px]">
          <div class="absolute inset-0 grid grid-cols-2 grid-rows-2 gap-4">
            <div class="bg-black animate-float" style="animation-delay: 0s;"></div>
            <div class="bg-red-600 animate-float" style="animation-delay: 0.2s;"></div>
            <div class="bg-red-600 animate-float" style="animation-delay: 0.4s;"></div>
            <div class="bg-black animate-float" style="animation-delay: 0.6s;"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Work Section -->
  <section id="work" class="py-32 px-6 lg:px-12 bg-gray-50">
    <div class="max-w-[1400px] mx-auto">
      <div class="mb-20">
        <h2 class="text-6xl lg:text-8xl font-bold tracking-tight mb-6">
          SELECTED<br/>WORK
        </h2>
        <div class="w-24 h-1 bg-red-600"></div>
      </div>

      <!-- Asymmetric Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        {projects.map((project, index) => (
          <div 
            class={`
              group relative overflow-hidden bg-white hover:shadow-2xl transition-all duration-500
              ${index === 0 ? 'lg:col-span-8 lg:row-span-2' : ''}
              ${index === 1 ? 'lg:col-span-4' : ''}
              ${index === 2 ? 'lg:col-span-5' : ''}
              ${index === 3 ? 'lg:col-span-7' : ''}
            `}
          >
            <a href={project.link} class="block p-8 lg:p-12 h-full min-h-[300px] flex-col justify-between">
              <!-- Year Badge -->
              <div class="flex justify-between items-start mb-auto">
                <span class="text-sm font-bold text-red-600">{project.year}</span>
                <svg class="w-6 h-6 transform group-hover:translate-x-2 group-hover:-translate-y-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7m0 0H7m10 0v10"/>
                </svg>
              </div>

              <!-- Content -->
              <div class="mt-auto">
                <h3 class="text-3xl lg:text-4xl font-bold mb-2 group-hover:text-red-600 transition-colors">
                  {project.title}
                </h3>
                <p class="text-lg text-black/60 mb-6">
                  {project.subtitle}
                </p>
                <div class="flex flex-wrap gap-2">
                  {project.tags.map(tag => (
                    <span class="text-xs font-medium px-3 py-1 border border-black/20">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Hover Effect -->
              <div class="absolute inset-0 bg-linear-to-br from-red-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section id="blog" class="py-32 px-6 lg:px-12">
    <div class="max-w-[1400px] mx-auto">
      <div class="mb-20">
        <h2 class="text-6xl lg:text-8xl font-bold tracking-tight mb-6">
          LATEST<br/>THOUGHTS
        </h2>
        <div class="w-24 h-1 bg-red-600"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        {blogPosts.map(post => (
          <article class="group">
            <a href={`/blog/${post.slug}`} class="block">
              <div class="mb-6 flex items-center gap-4 text-sm text-black/60">
                <time>{post.date}</time>
                <span>•</span>
                <span>{post.readTime}</span>
              </div>
              <h3 class="text-3xl lg:text-4xl font-bold mb-4 group-hover:text-red-600 transition-colors">
                {post.title}
              </h3>
              <p class="text-lg text-black/70 leading-relaxed mb-6">
                {post.excerpt}
              </p>
              <span class="inline-flex items-center gap-2 font-medium group-hover:gap-4 transition-all">
                Read More
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </a>
          </article>
        ))}
      </div>

      <div class="mt-16 text-center">
        <a href="/blog" class="inline-block px-8 py-4 border-2 border-black font-medium hover:bg-black hover:text-white transition-all duration-300">
          VIEW ALL POSTS
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-32 px-6 lg:px-12 bg-black text-white">
    <div class="max-w-[1400px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-6xl lg:text-8xl font-bold tracking-tight mb-8">
            LET'S<br/>WORK<br/>
            <span class="text-red-600">TOGETHER</span>
          </h2>
          <p class="text-xl text-white/70 leading-relaxed">
            Available for select freelance projects and full-time opportunities. 
            Let's create something exceptional.
          </p>
        </div>

        <div class="space-y-6">
          <a href="mailto:your.email@example.com" class="block group">
            <span class="text-sm text-white/60 mb-2 block">EMAIL</span>
            <span class="text-2xl font-medium group-hover:text-red-600 transition-colors">
              your.email@example.com
            </span>
          </a>
          
          <div class="flex gap-6 pt-8">
            <a href="https://github.com" target="_blank" class="text-white/60 hover:text-red-600 transition-colors">
              <span class="sr-only">GitHub</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a href="https://linkedin.com" target="_blank" class="text-white/60 hover:text-red-600 transition-colors">
              <span class="sr-only">LinkedIn</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            <a href="https://twitter.com" target="_blank" class="text-white/60 hover:text-red-600 transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 px-6 lg:px-12 bg-black text-white border-t border-white/10">
    <div class="max-w-[1400px] mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
      <p class="text-sm text-white/60">
        © 2024 Your Name. All rights reserved.
      </p>
      <p class="text-sm text-white/60">
        Designed & Built with <span class="text-red-600">♥</span> using Astro & TailwindCSS
      </p>
    </div>
  </footer>
</Layout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>