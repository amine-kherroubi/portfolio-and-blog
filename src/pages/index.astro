---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE, SOCIAL } from "../config/site";
---

<BaseLayout>
  <Navigation currentPage="home" />

  <!-- Hero Section -->
  <section class="min-h-screen flex items-center px-16 lg:px-24 py-32">
    <div class="max-w-[1600px] w-full mx-auto">
      <!-- Accent Line -->
      <div class="w-16 h-0.5 bg-black mb-16"></div>

      <!-- Main Title -->
      <h1
        class="text-[clamp(4rem,15vw,12rem)] font-bold leading-[0.9] tracking-[-0.03em] mb-24"
      >
        YOUR<br />NAME
      </h1>

      <!-- Content Grid -->
      <div class="grid grid-cols-12 gap-x-8 gap-y-16">
        <!-- Description -->
        <div class="col-span-12 lg:col-span-5">
          <p class="text-[1.75rem] leading-[1.4] font-light tracking-[-0.01em]">
            Designer & Developer
          </p>
          <p
            class="text-[1.75rem] leading-[1.4] font-light tracking-[-0.01em] mt-2 text-black/60"
          >
            Focused on clarity, function, and timeless solutions
          </p>
        </div>

        <!-- CTA Buttons -->
        <div
          class="col-span-12 lg:col-span-5 lg:col-start-8 flex flex-col gap-4"
        >
          <a
            href="/portfolio"
            class="group relative px-12 py-6 bg-black text-white text-center transition-all duration-200 hover:pl-14"
          >
            <span
              class="text-[0.8125rem] font-bold uppercase tracking-[0.15em]"
            >
              Portfolio
            </span>
            <span
              class="absolute right-12 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            >
              →
            </span>
          </a>
          <a
            href="/blog"
            class="group relative px-12 py-6 border-2 border-black text-center transition-all duration-200 hover:bg-black hover:text-white hover:pl-14"
          >
            <span
              class="text-[0.8125rem] font-bold uppercase tracking-[0.15em]"
            >
              Blog
            </span>
            <span
              class="absolute right-12 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            >
              →
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="py-32 px-16 lg:px-24 border-t-2 border-black">
    <div class="max-w-[1600px] mx-auto">
      <div class="grid grid-cols-12 gap-x-8 gap-y-16">
        <!-- Label -->
        <div class="col-span-12 lg:col-span-3">
          <div class="w-16 h-0.5 bg-black mb-8"></div>
          <h2 class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em]">
            Philosophy
          </h2>
        </div>

        <!-- Content -->
        <div class="col-span-12 lg:col-span-7 lg:col-start-6">
          <p
            class="text-[1.5rem] leading-[1.5] tracking-[-0.01em] mb-10 font-light"
          >
            Every design decision stems from function. Form follows purpose.
            Systems over decoration. Clarity over complexity.
          </p>
          <p
            class="text-[1.5rem] leading-[1.5] tracking-[-0.01em] font-light text-black/70"
          >
            Working at the intersection of design and technology, creating
            solutions that prioritize usability, accessibility, and longevity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section
    id="contact"
    class="py-32 px-16 lg:px-24 bg-black text-white border-t-2 border-white"
  >
    <div class="max-w-[1600px] mx-auto">
      <div class="grid grid-cols-12 gap-x-8 gap-y-16">
        <!-- Label -->
        <div class="col-span-12 lg:col-span-3">
          <div class="w-16 h-0.5 bg-white mb-8"></div>
          <h2 class="text-[2rem] font-bold leading-[1.1] tracking-[-0.02em]">
            Contact
          </h2>
        </div>

        <!-- Content -->
        <div class="col-span-12 lg:col-span-7 lg:col-start-6">
          <!-- Email -->
          <a
            href={`mailto:${SITE.email}`}
            class="inline-block text-[1.75rem] font-bold mb-16 border-b-2 border-transparent hover:border-white transition-colors duration-200"
          >
            {SITE.email}
          </a>

          <!-- Social Links -->
          <div class="flex gap-12 pt-8 border-t border-white/20">
            {
              SOCIAL.github && (
                <a
                  href={SOCIAL.github}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  GitHub
                </a>
              )
            }
            {
              SOCIAL.linkedin && (
                <a
                  href={SOCIAL.linkedin}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  LinkedIn
                </a>
              )
            }
            {
              SOCIAL.twitter && (
                <a
                  href={SOCIAL.twitter}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  Twitter
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer variant="dark" />
</BaseLayout>
