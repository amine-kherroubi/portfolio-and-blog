---
import Layout from "../layouts/Layout.astro";

const quotes = [
  {
    text: "Form follows function — that has been misunderstood. Form and function should be one, joined in a spiritual union.",
    author: "Frank Lloyd Wright",
  },
  {
    text: "Simplicity is not the goal. It is the by-product of a good idea and modest expectations.",
    author: "Paul Rand",
  },
  {
    text: "Design is not just what it looks like and feels like. Design is how it works.",
    author: "Steve Jobs",
  },
  {
    text: "The details are not the details. They make the design.",
    author: "Charles Eames",
  },
];

const currentQuote = quotes[Math.floor(Math.random() * quotes.length)];
---

<Layout title="Your Name — Designer & Developer">
  <!-- Fixed Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b-4 border-black">
    <div
      class="max-w-[1600px] mx-auto px-16 lg:px-24 py-8 flex justify-between items-center"
    >
      <a href="/" class="text-lg font-bold tracking-tight uppercase">
        YOUR NAME
      </a>
      <ul class="flex gap-12 text-sm font-bold uppercase tracking-wide">
        <li><a href="/portfolio">PORTFOLIO</a></li>
        <li><a href="/blog">BLOG</a></li>
        <li><a href="#contact">CONTACT</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero Section with Art -->
  <section
    class="min-h-screen flex items-center justify-center px-16 lg:px-24 pt-32 pb-32"
  >
    <div class="max-w-[1600px] w-full mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-32 items-center">
        <!-- Generative Art Grid -->
        <div class="order-2 lg:order-1">
          <div class="aspect-square grid grid-cols-4 grid-rows-4 gap-4">
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>

            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="border-4 border-black"></div>

            <div class="bg-[#FFD700]"></div>
            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>

            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>
          </div>
        </div>

        <!-- Quote and CTA -->
        <div class="order-1 lg:order-2">
          <div class="w-32 h-2 bg-[#FFD700] mb-16"></div>

          <blockquote class="mb-24">
            <p
              class="text-3xl lg:text-4xl font-bold leading-[1.3] tracking-tight mb-12"
            >
              "{currentQuote.text}"
            </p>
            <footer class="flex items-center gap-6">
              <div class="w-16 h-1 bg-black"></div>
              <cite
                class="text-xl font-bold uppercase tracking-wide not-italic"
              >
                {currentQuote.author}
              </cite>
            </footer>
          </blockquote>

          <div class="space-y-8">
            <a
              href="/portfolio"
              class="block w-full px-16 py-8 bg-black text-white text-center font-bold uppercase text-sm tracking-wide border-4 border-black"
            >
              VIEW PORTFOLIO
            </a>
            <a
              href="/blog"
              class="block w-full px-16 py-8 bg-white text-black text-center font-bold uppercase text-sm tracking-wide border-4 border-black"
            >
              READ BLOG
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Secondary Art Section -->
  <section class="py-32 px-16 lg:px-24 bg-[#F5F5F5]">
    <div class="max-w-[1600px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
        <!-- Art Piece 1 -->
        <div class="aspect-square">
          <div class="h-full grid grid-cols-3 grid-rows-3 gap-3">
            <div class="bg-[#FFD700]"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="bg-black"></div>
            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
          </div>
        </div>

        <!-- Art Piece 2 -->
        <div class="aspect-square">
          <div class="h-full grid grid-cols-2 grid-rows-2 gap-6">
            <div class="border-4 border-black"></div>
            <div class="bg-black"></div>
            <div class="bg-[#FFD700]"></div>
            <div class="border-4 border-black"></div>
          </div>
        </div>

        <!-- Art Piece 3 -->
        <div class="aspect-square">
          <div class="h-full flex flex-col gap-4">
            <div class="flex-1 bg-black"></div>
            <div class="flex-1 bg-[#FFD700]"></div>
            <div class="flex-1 border-4 border-black"></div>
            <div class="flex-1 bg-black"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="py-32 px-16 lg:px-24">
    <div class="max-w-[1200px] mx-auto">
      <div class="w-32 h-2 bg-black mb-16"></div>
      <h2
        class="text-[clamp(3rem,7vw,7rem)] font-bold leading-[0.85] tracking-tighter mb-16"
      >
        DESIGN<br />WITH<br />
        <span class="text-[#FFD700]">PURPOSE</span>
      </h2>
      <p class="text-2xl lg:text-3xl text-black/80 leading-[1.5] mb-16">
        At the intersection of form and function, where every pixel serves a
        purpose and every decision is deliberate. Creating digital experiences
        that honor the principles of Swiss design: clarity, precision, and
        timeless elegance.
      </p>
      <div class="flex gap-8">
        <a
          href="/portfolio"
          class="px-12 py-6 bg-black text-white font-bold uppercase text-sm tracking-wide"
        >
          EXPLORE WORK
        </a>
        <a
          href="/blog"
          class="px-12 py-6 border-4 border-black font-bold uppercase text-sm tracking-wide"
        >
          READ THOUGHTS
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-32 px-16 lg:px-24 bg-black text-white">
    <div class="max-w-[1600px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-32 items-center">
        <div>
          <div class="w-32 h-2 bg-[#FFD700] mb-16"></div>
          <h2
            class="text-[clamp(3rem,7vw,7rem)] font-bold leading-[0.85] tracking-tighter mb-16"
          >
            LET'S<br />CONNECT
          </h2>
          <p class="text-2xl text-white/80 leading-[1.5]">
            Available for collaboration, freelance projects, and creative
            partnerships.
          </p>
        </div>

        <div class="space-y-16">
          <a href="mailto:your.email@example.com" class="block group">
            <span
              class="text-sm text-white/60 mb-4 block font-bold uppercase tracking-wide"
              >EMAIL</span
            >
            <span
              class="text-3xl font-bold border-b-4 border-transparent group-hover:border-[#FFD700]"
            >
              your.email@example.com
            </span>
          </a>

          <div class="flex gap-8">
            <a
              href="https://github.com"
              target="_blank"
              rel="noopener"
              class="w-16 h-16 border-2 border-white flex items-center justify-center hover:bg-[#FFD700] hover:border-[#FFD700] hover:text-black"
            >
              <span class="sr-only">GitHub</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
            <a
              href="https://linkedin.com"
              target="_blank"
              rel="noopener"
              class="w-16 h-16 border-2 border-white flex items-center justify-center hover:bg-[#FFD700] hover:border-[#FFD700] hover:text-black"
            >
              <span class="sr-only">LinkedIn</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </a>
            <a
              href="https://twitter.com"
              target="_blank"
              rel="noopener"
              class="w-16 h-16 border-2 border-white flex items-center justify-center hover:bg-[#FFD700] hover:border-[#FFD700] hover:text-black"
            >
              <span class="sr-only">Twitter</span>
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer
    class="py-12 px-16 lg:px-24 bg-black text-white border-t-2 border-white/20"
  >
    <div
      class="max-w-[1600px] mx-auto flex flex-col md:flex-row justify-between items-center gap-8"
    >
      <p class="text-sm font-bold uppercase tracking-wide">© 2024 Your Name</p>
      <p class="text-sm font-bold uppercase tracking-wide">
        Designed with <span class="text-[#FFD700]">precision</span> using Astro
      </p>
    </div>
  </footer>
</Layout>
