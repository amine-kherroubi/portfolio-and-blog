---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE, SOCIAL } from "../config/site";
---

<BaseLayout>
  <Navigation currentPage="home" />

  <!-- Hero Section with generous spacing -->
  <section
    class="min-h-screen flex items-center px-8 md:px-16 lg:px-20 xl:px-32 py-40 lg:py-48"
  >
    <div class="max-w-[1400px] w-full mx-auto">
      <!-- Accent Line -->
      <div class="w-20 h-0.5 bg-black mb-20 lg:mb-24"></div>

      <!-- Main Title -->
      <h1
        class="text-[clamp(4rem,15vw,12rem)] font-bold leading-[0.9] tracking-[-0.03em] mb-32 lg:mb-40"
      >
        YOUR<br />NAME
      </h1>

      <!-- Content Grid -->
      <div
        class="grid grid-cols-12 gap-x-6 md:gap-x-12 lg:gap-x-16 gap-y-20 lg:gap-y-24"
      >
        <!-- Description -->
        <div class="col-span-12 lg:col-span-5">
          <p
            class="text-[1.75rem] lg:text-[2rem] leading-[1.5] font-light tracking-[-0.01em] mb-6"
          >
            Designer & Developer
          </p>
          <p
            class="text-[1.75rem] lg:text-[2rem] leading-[1.5] font-light tracking-[-0.01em] text-black/60"
          >
            Focused on clarity, function, and timeless solutions
          </p>
        </div>

        <!-- CTA Buttons -->
        <div
          class="col-span-12 lg:col-span-5 lg:col-start-8 flex flex-col gap-6"
        >
          <a
            href="/portfolio"
            class="group relative px-12 py-7 bg-black text-white text-center transition-all duration-200 hover:pl-14"
          >
            <span
              class="text-[0.8125rem] font-bold uppercase tracking-[0.15em]"
            >
              Portfolio
            </span>
            <span
              class="absolute right-12 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            >
              →
            </span>
          </a>
          <a
            href="/blog"
            class="group relative px-12 py-7 border-2 border-black text-center transition-all duration-200 hover:bg-black hover:text-white hover:pl-14"
          >
            <span
              class="text-[0.8125rem] font-bold uppercase tracking-[0.15em]"
            >
              Blog
            </span>
            <span
              class="absolute right-12 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-200"
            >
              →
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section
    class="py-40 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32 border-t-2 border-black"
  >
    <div class="max-w-[1400px] mx-auto">
      <div class="grid grid-cols-12 gap-x-6 md:gap-x-12 lg:gap-x-16 gap-y-20">
        <!-- Label -->
        <div class="col-span-12 lg:col-span-3">
          <div class="w-20 h-0.5 bg-black mb-10"></div>
          <h2
            class="text-[2rem] lg:text-[2.25rem] font-bold leading-[1.1] tracking-[-0.02em]"
          >
            Philosophy
          </h2>
        </div>

        <!-- Content -->
        <div class="col-span-12 lg:col-span-7 lg:col-start-6 space-y-10">
          <p
            class="text-[1.5rem] lg:text-[1.75rem] leading-[1.6] tracking-[-0.01em] font-light"
          >
            Every design decision stems from function. Form follows purpose.
            Systems over decoration. Clarity over complexity.
          </p>
          <p
            class="text-[1.5rem] lg:text-[1.75rem] leading-[1.6] tracking-[-0.01em] font-light text-black/70"
          >
            Working at the intersection of design and technology, creating
            solutions that prioritize usability, accessibility, and longevity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section
    id="contact"
    class="py-40 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32 bg-black text-white border-t-2 border-white"
  >
    <div class="max-w-[1400px] mx-auto">
      <div class="grid grid-cols-12 gap-x-6 md:gap-x-12 lg:gap-x-16 gap-y-20">
        <!-- Label -->
        <div class="col-span-12 lg:col-span-3">
          <div class="w-20 h-0.5 bg-white mb-10"></div>
          <h2
            class="text-[2rem] lg:text-[2.25rem] font-bold leading-[1.1] tracking-[-0.02em]"
          >
            Contact
          </h2>
        </div>

        <!-- Content -->
        <div class="col-span-12 lg:col-span-7 lg:col-start-6">
          <!-- Email -->
          <a
            href={`mailto:${SITE.email}`}
            class="inline-block text-[1.75rem] lg:text-[2rem] font-bold mb-20 border-b-2 border-transparent hover:border-white transition-colors duration-200"
          >
            {SITE.email}
          </a>

          <!-- Social Links -->
          <div
            class="flex gap-10 md:gap-12 lg:gap-16 pt-10 border-t border-white/20"
          >
            {
              SOCIAL.github && (
                <a
                  href={SOCIAL.github}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  GitHub
                </a>
              )
            }
            {
              SOCIAL.linkedin && (
                <a
                  href={SOCIAL.linkedin}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  LinkedIn
                </a>
              )
            }
            {
              SOCIAL.twitter && (
                <a
                  href={SOCIAL.twitter}
                  target="_blank"
                  rel="noopener"
                  class="text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
                >
                  Twitter
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer variant="dark" />
</BaseLayout>
