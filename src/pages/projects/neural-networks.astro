---
import Layout from "../../layouts/Layout.astro";

const project = {
  title: "NEURAL NETWORKS",
  subtitle: "Deep Learning Architecture",
  year: "2024",
  client: "Personal Research",
  role: "ML Engineer, Researcher",
  technologies: ["Python", "TensorFlow", "PyTorch", "NumPy"],
  duration: "6 months",
  description:
    "Development of a novel neural network architecture for image classification tasks, achieving 95% accuracy while reducing computational complexity by 40%.",
  challenge:
    "Traditional deep learning models required significant computational resources, making them impractical for edge devices and real-time applications.",
  solution:
    "Designed a pruned network architecture that maintains high accuracy while dramatically reducing parameter count through intelligent layer design and weight optimization.",
  results: [
    "40% reduction in model size",
    "95% accuracy maintained",
    "3x faster inference time",
    "Successfully deployed on edge devices",
  ],
  images: [
    "/images/projects/neural-nets-1.jpg",
    "/images/projects/neural-nets-2.jpg",
  ],
  github: "https://github.com/yourusername/neural-networks",
  demo: "https://demo.example.com",
};

const relatedProjects = [
  {
    title: "QUANTUM COMPUTING",
    subtitle: "Algorithm Optimization",
    slug: "quantum",
  },
  {
    title: "SWISS GRID SYSTEM",
    subtitle: "Interactive Design Tool",
    slug: "grid-system",
  },
];
---

<Layout title={`${project.title} — Project`}>
  <!-- Navigation -->
  <nav
    class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-sm border-b border-black/10"
  >
    <div
      class="max-w-[1400px] mx-auto px-6 lg:px-12 py-6 flex justify-between items-center"
    >
      <a
        href="/"
        class="text-lg font-bold tracking-tight hover:text-red-600 transition-colors"
      >
        ← HOME
      </a>
      <a
        href="/#work"
        class="text-sm font-medium hover:text-red-600 transition-colors"
      >
        ALL PROJECTS
      </a>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6 lg:px-12">
    <div class="max-w-[1400px] mx-auto">
      <div
        class="mb-8 flex items-center gap-4 text-sm font-medium text-black/60"
      >
        <span>{project.year}</span>
        <span>•</span>
        <span>{project.client}</span>
        <span>•</span>
        <span>{project.duration}</span>
      </div>

      <h1
        class="text-[clamp(3rem,8vw,7rem)] font-bold leading-[0.9] tracking-tight mb-6"
      >
        {project.title}
      </h1>
      <p class="text-3xl text-black/70 mb-12 max-w-[800px]">
        {project.subtitle}
      </p>
      <div class="w-24 h-1 bg-red-600"></div>
    </div>
  </section>

  <!-- Project Image -->
  <section class="px-6 lg:px-12 mb-20">
    <div class="max-w-[1400px] mx-auto">
      <div
        class="aspect-video bg-linear-to-br from-black to-red-600/20 flex items-center justify-center"
      >
        <p class="text-white/50 text-lg">
          Project Image / Screenshot / Visualization
        </p>
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="px-6 lg:px-12 mb-20">
    <div class="max-w-[1400px] mx-auto grid grid-cols-1 lg:grid-cols-12 gap-16">
      <!-- Main Content -->
      <div class="lg:col-span-8">
        <div class="space-y-16">
          <!-- Overview -->
          <div>
            <h2 class="text-4xl font-bold mb-6">Overview</h2>
            <p class="text-xl text-black/70 leading-relaxed">
              {project.description}
            </p>
          </div>

          <!-- Challenge -->
          <div>
            <h2 class="text-4xl font-bold mb-6">The Challenge</h2>
            <p class="text-xl text-black/70 leading-relaxed">
              {project.challenge}
            </p>
          </div>

          <!-- Solution -->
          <div>
            <h2 class="text-4xl font-bold mb-6">The Solution</h2>
            <p class="text-xl text-black/70 leading-relaxed mb-8">
              {project.solution}
            </p>

            <!-- Code Example -->
            <div class="bg-black text-white p-8 rounded-lg overflow-x-auto">
              <pre
                class="text-sm"><code>{`class OptimizedNetwork(nn.Module):
    def __init__(self, input_size, hidden_size, output_size):
        super().__init__()
        self.layers = nn.Sequential(
            nn.Linear(input_size, hidden_size),
            nn.ReLU(),
            nn.Dropout(0.2),
            nn.Linear(hidden_size, output_size)
        )
    
    def forward(self, x):
        return self.layers(x)`}</code></pre>
            </div>
          </div>

          <!-- Results -->
          <div>
            <h2 class="text-4xl font-bold mb-6">Results</h2>
            <ul class="space-y-4">
              {
                project.results.map((result) => (
                  <li class="flex items-start gap-4">
                    <div class="w-2 h-2 bg-red-600 mt-2 shrink-0" />
                    <p class="text-xl text-black/70">{result}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-4">
        <div class="lg:sticky lg:top-32 space-y-12">
          <!-- Project Info -->
          <div>
            <h3 class="text-lg font-bold mb-6">PROJECT INFO</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm text-black/60 mb-1">Role</dt>
                <dd class="font-medium">{project.role}</dd>
              </div>
              <div>
                <dt class="text-sm text-black/60 mb-1">Duration</dt>
                <dd class="font-medium">{project.duration}</dd>
              </div>
              <div>
                <dt class="text-sm text-black/60 mb-1">Year</dt>
                <dd class="font-medium">{project.year}</dd>
              </div>
            </dl>
          </div>

          <!-- Technologies -->
          <div>
            <h3 class="text-lg font-bold mb-6">TECHNOLOGIES</h3>
            <div class="flex flex-wrap gap-2">
              {
                project.technologies.map((tech) => (
                  <span class="px-4 py-2 bg-black text-white text-sm font-medium">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>

          <!-- Links -->
          <div class="space-y-4">
            {
              project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  class="flex items-center justify-between w-full px-6 py-4 bg-black text-white hover:bg-red-600 transition-colors group"
                >
                  <span class="font-medium">View on GitHub</span>
                  <svg
                    class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </a>
              )
            }
            {
              project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  class="flex items-center justify-between w-full px-6 py-4 border-2 border-black hover:bg-black hover:text-white transition-all group"
                >
                  <span class="font-medium">Live Demo</span>
                  <svg
                    class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Projects -->
  <section class="py-20 px-6 lg:px-12 bg-gray-50">
    <div class="max-w-[1400px] mx-auto">
      <h2 class="text-4xl font-bold mb-12">MORE PROJECTS</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
          relatedProjects.map((related) => (
            <a
              href={`/projects/${related.slug}`}
              class="group bg-white p-8 hover:shadow-2xl transition-all duration-500"
            >
              <h3 class="text-3xl font-bold mb-3 group-hover:text-red-600 transition-colors">
                {related.title}
              </h3>
              <p class="text-lg text-black/60 mb-6">{related.subtitle}</p>
              <span class="inline-flex items-center gap-2 font-medium group-hover:gap-4 transition-all">
                View Project
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 px-6 lg:px-12 bg-black text-white">
    <div
      class="max-w-[1400px] mx-auto flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <p class="text-sm text-white/60">
        © 2024 Your Name. All rights reserved.
      </p>
      <p class="text-sm text-white/60">
        Designed & Built with <span class="text-red-600">♥</span> using Astro &
        TailwindCSS
      </p>
    </div>
  </footer>
</Layout>
