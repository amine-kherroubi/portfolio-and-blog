---
import BaseLayout from "./BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    excerpt: string;
    readTime: string;
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.excerpt}>
  <Navigation currentPage="blog" />

  <article class="py-24 px-16 lg:px-24">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <header class="mb-24">
        <!-- Meta -->
        <div
          class="flex gap-8 text-[0.8125rem] font-bold uppercase tracking-[0.15em] mb-12 text-black/50"
        >
          <time>{frontmatter.date}</time>
          <span>Â·</span>
          <span>{frontmatter.readTime}</span>
        </div>

        <!-- Title -->
        <h1
          class="text-[clamp(2.5rem,8vw,5.5rem)] font-bold leading-[0.95] tracking-[-0.03em] mb-12"
        >
          {frontmatter.title}
        </h1>

        <!-- Excerpt -->
        <p
          class="text-[1.5rem] leading-[1.5] font-light text-black/70 max-w-3xl mb-16"
        >
          {frontmatter.excerpt}
        </p>

        <!-- Accent Line -->
        <div class="w-16 h-0.5 bg-black"></div>
      </header>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      <!-- Footer -->
      <footer class="mt-32 pt-12 border-t-2 border-black">
        <a
          href="/blog"
          class="inline-flex items-center gap-3 text-[0.8125rem] font-bold uppercase tracking-[0.15em] hover:opacity-50 transition-opacity duration-200"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path
              stroke-linecap="square"
              stroke-linejoin="miter"
              d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
          </svg>
          All Posts
        </a>
      </footer>
    </div>
  </article>

  <Footer variant="light" />
</BaseLayout>
