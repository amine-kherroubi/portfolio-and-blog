---
import BaseLayout from "./BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    excerpt: string;
    readTime: string;
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.excerpt}>
  <Navigation currentPage="blog" />

  <article class="pt-32 pb-24 px-8 lg:px-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <header class="mb-16">
        <div
          class="flex gap-6 text-sm font-bold uppercase tracking-wider mb-8 text-black/60"
        >
          <time>{frontmatter.date}</time>
          <span>·</span>
          <span>{frontmatter.readTime}</span>
        </div>

        <h1
          class="text-[clamp(2.5rem,7vw,5rem)] font-bold leading-[0.95] tracking-tight mb-8"
        >
          {frontmatter.title}
        </h1>

        <p class="text-xl text-black/70 leading-relaxed max-w-2xl">
          {frontmatter.excerpt}
        </p>

        <div class="h-px bg-yellow w-24 mt-12"></div>
      </header>

      <!-- Content -->
      <div class="prose prose-lg">
        <slot />
      </div>

      <!-- Footer -->
      <footer class="mt-24 pt-12 border-t-2 border-black">
        <a
          href="/blog"
          class="inline-block text-sm font-bold uppercase tracking-wider hover:text-yellow transition-colors"
        >
          ← All Posts
        </a>
      </footer>
    </div>
  </article>

  <Footer variant="light" />
</BaseLayout>
