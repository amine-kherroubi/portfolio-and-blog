---
import BaseLayout from "./BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    excerpt: string;
    readTime: string;
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.excerpt}>
  <Navigation currentPage="blog" />

  <article class="pt-40 pb-32 px-16">
    <div class="max-w-[1200px] mx-auto">
      <header class="mb-24">
        <div
          class="flex items-center gap-6 text-sm font-bold uppercase tracking-wide mb-12"
        >
          <time>{frontmatter.date}</time>
          <span class="w-2 h-2 bg-black"></span>
          <span>{frontmatter.readTime}</span>
        </div>
        <h1
          class="text-[clamp(3rem,7vw,7rem)] font-bold leading-[0.9] tracking-tighter mb-12"
        >
          {frontmatter.title}
        </h1>
        <p class="text-2xl text-black/70 leading-[1.5] max-w-[900px]">
          {frontmatter.excerpt}
        </p>
        <div class="mt-12 w-32 h-2 bg-yellow"></div>
      </header>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      <footer class="mt-32 pt-16 border-t-4 border-black">
        <div class="flex justify-between items-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-4 font-bold uppercase text-sm tracking-wide hover:text-yellow"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="3"
            >
              <path
                stroke-linecap="square"
                stroke-linejoin="miter"
                d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Back to Blog
          </a>
          <div class="flex gap-6">
            <button
              class="share-button w-12 h-12 border-2 border-black flex items-center justify-center hover:bg-yellow"
              title="Share on Twitter"
              data-platform="twitter"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </button>
            <button
              class="share-button w-12 h-12 border-2 border-black flex items-center justify-center hover:bg-yellow"
              title="Share on LinkedIn"
              data-platform="linkedin"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </footer>
    </div>
  </article>

  <Footer variant="dark" />
</BaseLayout>

<script>
  document.querySelectorAll(".share-button").forEach((button) => {
    button.addEventListener("click", () => {
      const platform = button.getAttribute("data-platform");
      const url = window.location.href;
      const title = document.title;

      let shareUrl = "";
      if (platform === "twitter") {
        shareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`;
      } else if (platform === "linkedin") {
        shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
      }

      if (shareUrl) {
        window.open(shareUrl, "_blank", "width=600,height=400");
      }
    });
  });
</script>

<style>
  .bg-yellow {
    background-color: #ffd700;
  }

  .text-yellow {
    color: #ffd700;
  }

  .hover\:bg-yellow:hover {
    background-color: #ffd700;
  }

  .hover\:text-yellow:hover {
    color: #ffd700;
  }
</style>
