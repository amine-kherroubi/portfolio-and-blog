---
import Layout from "./Layout.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    excerpt: string;
    readTime: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <nav
    class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-sm border-b border-black/10"
  >
    <div
      class="max-w-[900px] mx-auto px-6 py-6 flex justify-between items-center"
    >
      <a
        href="/"
        class="text-lg font-bold tracking-tight hover:text-red-600 transition-colors"
      >
        ← BACK
      </a>
      <a
        href="/blog"
        class="text-sm font-medium hover:text-red-600 transition-colors"
      >
        ALL POSTS
      </a>
    </div>
  </nav>

  <article class="pt-32 pb-24 px-6">
    <div class="max-w-[900px] mx-auto">
      <!-- Article Header -->
      <header class="mb-16">
        <div class="flex items-center gap-4 text-sm text-black/60 mb-8">
          <time>{frontmatter.date}</time>
          <span>•</span>
          <span>{frontmatter.readTime}</span>
        </div>
        <h1
          class="text-5xl lg:text-7xl font-bold tracking-tight mb-8 leading-tight"
        >
          {frontmatter.title}
        </h1>
        <p class="text-xl text-black/70 leading-relaxed">
          {frontmatter.excerpt}
        </p>
        <div class="mt-8 w-24 h-1 bg-red-600"></div>
      </header>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      <!-- Article Footer -->
      <footer class="mt-20 pt-12 border-t border-black/10">
        <div class="flex justify-between items-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 font-medium hover:text-red-600 transition-colors"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Back to Blog
          </a>
          <div class="flex gap-4">
            <button
              class="p-2 hover:text-red-600 transition-colors"
              title="Share on Twitter"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </button>
            <button
              class="p-2 hover:text-red-600 transition-colors"
              title="Share on LinkedIn"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<style is:global>
  /* Prose Styles for Blog Content */
  .prose {
    color: #000;
  }

  .prose h2 {
    font-size: 2.25rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .prose h3 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: rgba(0, 0, 0, 0.8);
  }

  .prose a {
    color: #dc2626;
    text-decoration: underline;
    font-weight: 500;
  }

  .prose a:hover {
    color: #000;
  }

  .prose strong {
    font-weight: 700;
    color: #000;
  }

  .prose code {
    background: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: "Courier New", monospace;
  }

  .prose pre {
    background: #000;
    color: #fff;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-left: 4px solid #dc2626;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(0, 0, 0, 0.7);
  }

  .prose ul,
  .prose ol {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.8;
  }

  .prose img {
    width: 100%;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .prose hr {
    border: none;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    margin: 3rem 0;
  }
</style>
