---
/**
 * SiteMeta Component - Desktop Only
 *
 * Purpose: Inject page-specific <title> and <meta> tags (description, Open Graph, etc.)
 * into <head>.
 *
 * Implementation: A server-side component that takes props (title, description, author,
 * image) and renders corresponding meta tags. Integrated at the top of each page or layout.
 *
 * Justification: Unique titles and descriptions inform search engines about each page.
 * Google may use the meta description for the snippet if it accurately describes the page.
 * Proper metadata improves click-through and relevance. Consistently formatted meta tags
 * across pages ensure good SEO hygiene.
 */

import { SITE } from "../config/site.config";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  noindex?: boolean;
  canonicalURL?: URL | string;
  keywords?: string[];
}

const {
  title = SITE.title,
  description = SITE.description,
  image = "/og-image.jpg",
  type = "website",
  author,
  publishedTime,
  modifiedTime,
  noindex = false,
  canonicalURL: providedCanonical,
  keywords = [],
} = Astro.props;

// Generate canonical URL
const canonicalURL = providedCanonical
  ? typeof providedCanonical === "string"
    ? new URL(providedCanonical)
    : providedCanonical
  : new URL(Astro.url.pathname, Astro.site || Astro.url.origin);

// Generate absolute image URL
const imageURL = new URL(image, Astro.site || Astro.url.origin);

// Generate full title with site name
const fullTitle = title.includes(SITE.name) ? title : `${title} â€” ${SITE.name}`;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />

<!-- Robots Meta Tags -->
{noindex && <meta name="robots" content="noindex, nofollow" />}
{!noindex && <meta name="robots" content="index, follow" />}

<!-- Keywords (if provided) -->
{keywords.length > 0 && <meta name="keywords" content={keywords.join(", ")} />}

<!-- Author (if provided) -->
{author && <meta name="author" content={author} />}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={SITE.name} />

<!-- Article-specific Open Graph tags -->
{
  type === "article" && (
    <>
      {publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )}
      {modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )}
      {author && <meta property="article:author" content={author} />}
    </>
  )
}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL} />

<!-- Additional SEO -->
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#000000" />
<meta name="msapplication-TileColor" content="#000000" />
