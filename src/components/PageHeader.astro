---
/**
 * PageHeader Component
 * 
 * Reusable page header component with title and optional description.
 * Used for consistent page headers across the site.
 */

interface Props {
  /** Page title */
  title: string;
  /** Optional page description */
  description?: string;
}

const { title, description } = Astro.props;
---

<section
  class="py-24 md:py-32 lg:py-48 px-8 md:px-16 lg:px-20 xl:px-32"
  aria-labelledby="page-title"
>
  <div class="max-w-screen-2xl mx-auto">
    <h1
      id="page-title"
      class="text-[clamp(4rem,12vw,10rem)] font-bold leading-[0.9] tracking-[-0.02em] mb-12 md:mb-16 lg:mb-24"
    >
      {title}
    </h1>
    {
      description && (
        <p class="text-lg md:text-xl lg:text-2xl leading-relaxed font-light tracking-tight max-w-3xl text-black/70 mb-6 md:mb-8">
          {description}
        </p>
      )
    }
    <slot />
  </div>
</section>
