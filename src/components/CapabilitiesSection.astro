---
/**
 * CapabilitiesSection Component - Desktop Only
 */

interface Capability {
  title: string;
  items: string[];
}

interface Props {
  capabilities: Capability[];
}

const { capabilities } = Astro.props;
---

<section class="py-24 px-8 border-t-2 border-black">
  <div class="max-w-container mx-auto">
    <div class="grid grid-cols-12 gap-12">
      <h2
        class="col-span-3 text-[2.25rem] font-bold leading-[1.1] tracking-[-0.02em]"
      >
        Capabilities
      </h2>

      <div class="col-span-9 grid grid-cols-3 gap-12">
        {
          capabilities.map(({ title, items }) => (
            <div class="border-l-2 border-black pl-6">
              <h3 class="text-sm font-bold uppercase tracking-[0.15em] mb-6">
                {title}
              </h3>
              <ul class="space-y-3 text-base leading-relaxed text-black/70">
                {items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
