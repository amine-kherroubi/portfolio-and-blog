---
interface Props {
  title?: string;
  description?: string;
  accent?: boolean;
}

const { title, description, accent = true } = Astro.props;
---

<div class="section-header">
  {accent && <div class="h-px bg-black w-24 mb-12" />}

  {
    title && (
      <h2 class="text-5xl font-bold tracking-tight leading-tight mb-8">
        <slot name="title">{title}</slot>
      </h2>
    )
  }

  {
    description && (
      <p class="text-2xl text-black/80 leading-relaxed">{description}</p>
    )
  }

  <slot name="description" />
  <slot />
</div>
