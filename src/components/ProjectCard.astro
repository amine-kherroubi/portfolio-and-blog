---
interface Props {
  title: string;
  subtitle: string;
  year: string;
  tags: string[];
  link: string;
  gridSpan?: string;
}

const { title, subtitle, year, tags, link, gridSpan = "" } = Astro.props;
---

<div
  class:list={[
    "group relative overflow-hidden bg-white border-4 border-black",
    gridSpan,
  ]}
>
  <a
    href={link}
    class="block p-12 lg:p-16 h-full min-h-[350px] flex flex-col justify-between"
  >
    <div class="flex justify-between items-start">
      <span class="text-sm font-bold bg-yellow px-4 py-2">{year}</span>
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="3"
      >
        <path
          stroke-linecap="square"
          stroke-linejoin="miter"
          d="M7 17L17 7m0 0H7m10 0v10"></path>
      </svg>
    </div>

    <div>
      <h3 class="text-4xl lg:text-5xl font-bold mb-4 leading-[0.9]">
        {title}
      </h3>
      <p class="text-xl text-black/70 mb-8 font-medium">
        {subtitle}
      </p>
      <div class="flex flex-wrap gap-3">
        {
          tags.map((tag) => (
            <span class="text-xs font-bold px-4 py-2 border-2 border-black uppercase tracking-wide">
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </a>
</div>
