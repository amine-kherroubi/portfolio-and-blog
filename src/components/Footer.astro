---
/**
 * Footer Component
 * 
 * Site footer with copyright and attribution.
 * Simple, accessible footer component.
 */

import { getCurrentYear } from "../utils/format";

interface Props {
  /** Footer variant (for future extensibility) */
  variant?: "default" | "light";
}

const { variant = "default" } = Astro.props;
const year = getCurrentYear();
