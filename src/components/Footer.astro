---
interface Props {
  variant?: "light" | "dark";
}

const { variant = "dark" } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class:list={[
    "py-12 px-16 lg:px-24",
    variant === "dark"
      ? "bg-black text-white border-t-2 border-white/20"
      : "bg-white text-black border-t-4 border-black",
  ]}
>
  <div
    class="max-w-[1600px] mx-auto flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <p class="text-sm font-bold uppercase tracking-wide">
      Â© {currentYear} Your Name
    </p>
    <p class="text-sm font-bold uppercase tracking-wide">
      Designed with <span class="text-yellow">precision</span> using Astro
    </p>
  </div>
</footer>

<style>
  .text-yellow {
    color: #ffd700;
  }
</style>
