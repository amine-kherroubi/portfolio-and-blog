---
/**
 * Navigation Component - Desktop Only
 */

import { NAVIGATION_LINKS, PAGE_IDS } from "../utils/constants";

interface Props {
  currentPage?: (typeof PAGE_IDS)[keyof typeof PAGE_IDS];
}

const { currentPage } = Astro.props;
const links = NAVIGATION_LINKS;
---

<nav
  class="bg-white border-b-2 border-black sticky top-0 z-50"
  aria-label="Main navigation"
>
  <div class="max-w-container mx-auto px-8">
    <div class="h-20 flex justify-between items-center">
      <a
        href="/"
        class="text-sm font-bold tracking-[0.15em] uppercase hover:opacity-50 transition-opacity duration-200"
        aria-label={currentPage !== PAGE_IDS.HOME ? "Go to home page" : "Home"}
        aria-current={currentPage === PAGE_IDS.HOME ? "page" : undefined}
      >
        {currentPage !== PAGE_IDS.HOME ? "Home" : "Your Name"}
      </a>

      <ul
        class="flex gap-10 text-sm font-bold uppercase tracking-[0.15em]"
        role="list"
      >
        {
          links.map(({ href, label, page }) => (
            <li>
              <a
                href={href}
                class:list={[
                  "transition-opacity duration-200",
                  currentPage === page
                    ? "opacity-100"
                    : "opacity-50 hover:opacity-100",
                ]}
                aria-current={currentPage === page ? "page" : undefined}
              >
                {label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
