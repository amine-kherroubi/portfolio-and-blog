---
interface Props {
  currentPage?: "home" | "portfolio" | "blog";
}

const { currentPage } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b-2 border-black">
  <div
    class="max-w-7xl mx-auto px-8 lg:px-16 py-6 flex justify-between items-center"
  >
    <a
      href="/"
      class="text-sm font-bold tracking-wider uppercase hover:opacity-60 transition-opacity"
    >
      {currentPage !== "home" ? "‚Üê Home" : "Your Name"}
    </a>

    <ul class="flex gap-8 text-sm font-bold uppercase tracking-wider">
      <li>
        <a
          href="/portfolio"
          class:list={[
            "transition-opacity",
            currentPage === "portfolio"
              ? "opacity-100"
              : "opacity-60 hover:opacity-100",
          ]}
        >
          Portfolio
        </a>
      </li>
      <li>
        <a
          href="/blog"
          class:list={[
            "transition-opacity",
            currentPage === "blog"
              ? "opacity-100"
              : "opacity-60 hover:opacity-100",
          ]}
        >
          Blog
        </a>
      </li>
    </ul>
  </div>
</nav>
