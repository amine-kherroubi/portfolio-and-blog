---
interface Props {
  currentPage?: "home" | "portfolio" | "blog" | "about";
}

const { currentPage } = Astro.props;

const links = [
  { href: "/about", label: "About", page: "about" },
  { href: "/portfolio", label: "Portfolio", page: "portfolio" },
  { href: "/blog", label: "Blog", page: "blog" },
] as const;
---

<nav class="bg-white border-b-2 border-black">
  <div
    class="max-w-screen-2xl mx-auto px-32 h-24 flex justify-between items-center"
  >
    <a
      href="/"
      class="text-sm font-bold tracking-widest uppercase hover:opacity-50 transition-opacity"
    >
      {currentPage !== "home" ? "Home" : "Your Name"}
    </a>
    <ul class="flex gap-16 text-sm font-bold uppercase tracking-widest">
      {
        links.map(({ href, label, page }) => (
          <li>
            <a
              href={href}
              class:list={[
                "transition-opacity",
                currentPage === page
                  ? "opacity-100"
                  : "opacity-50 hover:opacity-100",
              ]}
            >
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
