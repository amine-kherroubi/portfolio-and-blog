---
interface Props {
  currentPage?: "home" | "portfolio" | "blog";
}

const { currentPage } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b-2 border-black">
  <div
    class="max-w-7xl mx-auto px-8 lg:px-16 py-6 flex justify-between items-center"
  >
    <a
      href="/"
      class="text-sm font-bold tracking-wider uppercase hover:text-yellow transition-colors"
    >
      {currentPage !== "home" ? "‚Üê Home" : "Your Name"}
    </a>

    <ul class="flex gap-8 text-sm font-bold uppercase tracking-wider">
      <li>
        <a
          href="/portfolio"
          class:list={[
            "transition-colors",
            currentPage === "portfolio" ? "text-yellow" : "hover:text-yellow",
          ]}
        >
          Portfolio
        </a>
      </li>
      <li>
        <a
          href="/blog"
          class:list={[
            "transition-colors",
            currentPage === "blog" ? "text-yellow" : "hover:text-yellow",
          ]}
        >
          Blog
        </a>
      </li>
      <li>
        <a href="/#contact" class="hover:text-yellow transition-colors">
          Contact
        </a>
      </li>
    </ul>
  </div>
</nav>
