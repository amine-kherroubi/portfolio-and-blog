---
interface Props {
  label: string;
  variant?: "default" | "filter" | "large";
  active?: boolean;
  clickable?: boolean;
}

const {
  label,
  variant = "default",
  active = false,
  clickable = false,
} = Astro.props;
---

<span
  class:list={[
    "inline-block font-bold uppercase tracking-[0.15em] transition-all duration-200",
    {
      "text-[0.6875rem] px-3 py-1.5 border-2 border-black":
        variant === "default",
      "text-[0.6875rem] px-4 py-2 border-2 border-black": variant === "filter",
      "text-xs px-4 py-2.5 border-2 border-black": variant === "large",
      "bg-black text-white": active,
      "bg-white text-black hover:bg-black hover:text-white":
        !active && clickable,
      "bg-white text-black": !active && !clickable,
      "cursor-pointer": clickable,
    },
  ]}
  data-tag={clickable ? label : undefined}
>
  {label}
</span>
