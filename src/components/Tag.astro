---
/**
 * Tag Component
 * 
 * Displays a tag with various size and style variants.
 * Used for content categorization and filtering.
 */

interface Props {
  /** Tag label text */
  label: string;
  /** Visual variant */
  variant?: "default" | "filter" | "large";
  /** Whether the tag is in an active/selected state */
  active?: boolean;
  /** Whether the tag is clickable/interactive */
  clickable?: boolean;
}

const {
  label,
  variant = "default",
  active = false,
  clickable = false,
} = Astro.props;

/**
 * Size classes for different variants
 */
const sizeClasses: Record<Props["variant"], string> = {
  default: "text-xs md:text-sm px-4 py-2 border-2",
  filter: "text-xs md:text-sm px-4 md:px-5 py-2 md:py-2.5 border-2",
  large: "text-sm md:text-base px-5 py-3 border-2",
};

/**
 * Color classes based on state
 */
const colorClasses = active
  ? "bg-black text-white"
  : clickable
    ? "bg-white text-black hover:bg-black hover:text-white transition-colors duration-200"
    : "bg-white text-black";
---

<span
  class:list={[
    "inline-block font-bold uppercase tracking-[0.15em] border-black transition-colors duration-200",
    sizeClasses[variant],
    colorClasses,
    clickable && "cursor-pointer",
  ]}
  data-tag={clickable ? label : undefined}
>
  {label}
</span>
